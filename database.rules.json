{
    "rules": {
        "users": {
            "$uid": {
                "devices": {
                    "$deviceId": {
                        "data": {
                            ".indexOn": [
                                "created_at"
                            ],
                            ".write": true,
                            ".read": "auth != null && auth.uid == $uid"
                        },
                        ".read": "auth != null && auth.uid == $uid",
                        ".write": "auth != null && auth.uid == $uid"
                    }
                },
                ".read": "auth != null && auth.uid == $uid",
                ".write": "auth != null && auth.uid == $uid"
            }
        }
    }
}